{
  "name": "moove-account",
  "version": "1.0.0",
  "description": "account micro-app",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:pm2": "pm2-runtime start ./dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --poll src/index.ts",
    "start:docker": "docker run -p 4001:4001 faridmansimli/$npm_package_name",
    "build:docker": "docker build -t faridmansimli/$npm_package_name .",
    "push:docker": "docker push faridmansimli/$npm_package_name"
  },
  "keywords": [
    "nodej",
    "typescript"
  ],
  "author": "Farid Mansimli",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^5.7.14",
    "@mikro-orm/postgresql": "^5.7.14",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.14",
    "@mikro-orm/migrations": "^5.7.14",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
