{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "baseUrl": ".",
    "outDir": "./dist",
    "allowJs": true,
    "paths": {
      "@/src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  }
}
